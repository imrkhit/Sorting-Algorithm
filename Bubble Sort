#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a[100],i,n,ele;
    printf("enter the size of the array\n");
    scanf("%d",&n);
    printf("enter the elements\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&ele);
        a[i]=ele;
    }
    bubble_sort(a,n);
    for(i=0;i<n;i++)
        printf("%d\t",a[i]);
    getch();
}

void bubble_sort(int a[],int n)
{
    int i, round, temp;
    for(round=1;round<=n-1;round++)
    {
        for(i=0;i<=n-1-round;i++)
        {
            if(a[i]>a[i+1])
            {
                temp=a[i];
                a[i]=a[i+1];
                a[i+1]=temp;
            }
        }
    }
}
