#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a[100], LOC, n, temp, ele, i;
    printf("Enter the size of the array\n");
    scanf("%d",&n);
    printf("Enter the elements of the array\n");
    for(i=0;i<=n-1;i++)
    {
        scanf("%d\t",&ele);
        a[i]=ele;
    }
    for(i=0;i<=n-2;i++)
    {
        LOC=min(a,i,n);
        temp=a[i];
        a[i]=a[LOC];
        a[LOC]=temp;
    }
    for(i=0;i<n;i++)
        printf("%d\t",a[i]);
    getch();
}
int min(int a[], int k, int n)
{
    int LOC, MIN, i;
    MIN=a[k];
    LOC=k;
    for(i=k;i<=n-1;i++)
    {
        if(MIN>a[i])
        {
            MIN=a[i];
            LOC=i;
        }
    }
    return LOC;
}
